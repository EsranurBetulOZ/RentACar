@model Arac_Kiralama.Models.Dtos.Users.LoginRequestDto
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg border-0">
                    <div class="row g-0">
                        <!-- Sol taraf - Araç görseli -->
                        <div class="col-md-5 d-none d-md-block">
                            <div class="h-100 position-relative" style="background: url('/images/log.jpg') center/cover; min-height: 500px;">
                                <div class="position-absolute bottom-0 start-0 p-4 text-white">
                                    <h3 class="fw-bold">Hoş Geldiniz</h3>
                                    <p>Araç kiralama deneyiminize kaldığınız yerden devam edin.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ taraf - Giriş formu -->
                        <div class="col-md-7">
                            <div class="card-body p-4 p-md-5">
                                <div class="text-center mb-4">
                                    <h2 class="fw-bold text-primary">Giriş Yap</h2>
                                    <p class="text-muted">Hesabınıza giriş yaparak araç kiralama işlemlerinizi yönetin</p>
                                </div>

                                <form asp-controller="Account" asp-action="Login" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" class="form-control" placeholder="E-posta" required type="email" />
                                        <label asp-for="Email">E-posta</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Password" class="form-control" placeholder="Şifre" required type="password" />
                                        <label asp-for="Password">Şifre</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-between mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                                            <label class="form-check-label" for="rememberMe">
                                                Beni hatırla
                                            </label>
                                        </div>
                                        <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary">Şifremi unuttum</a>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                                    </div>

                                    <div class="text-center mt-4">
                                        <p>Hesabınız yok mu? <a asp-controller="Account" asp-action="Register" class="text-primary fw-bold">Kayıt Ol</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}