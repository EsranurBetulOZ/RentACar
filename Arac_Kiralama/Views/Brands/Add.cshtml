@using Arac_Kiralama.Models.Dtos.Brands
@model BrandAddRequestDto

@{
    ViewData["Title"] = "Marka Ekle";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold">Yeni Marka Ekle</h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-controller="Brands" asp-action="Add" method="post">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold">Marka Adı</label>
                    <input asp-for="Name" class="form-control form-control-lg border-0 bg-light" placeholder="Marka adını giriniz" />
                    <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ModelYear" class="form-label fw-semibold">Model Yılı</label>
                    <input asp-for="ModelYear" class="form-control form-control-lg border-0 bg-light" placeholder="Model yılını giriniz" />
                    <span asp-validation-for="ModelYear" class="text-danger mt-1 d-block"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-check-circle me-2"></i>Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-light px-4 py-2">
                        <i class="bi bi-x-circle me-2"></i>İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


