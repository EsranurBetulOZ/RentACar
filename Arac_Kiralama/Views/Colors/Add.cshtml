@using Arac_Kiralama.Models.Dtos.Colors
@model ColorAddRequestDto
@{
    ViewData["Title"] = "Renk Ekle";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold">Yeni Renk Ekle</h2>
        <a asp-controller="Colors" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Geri Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-controller="Colors" asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Renk Adı</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">RGB Değerleri</label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="RValue" class="form-label">R (Kırmızı)</label>
                                    <div class="d-flex gap-2 align-items-center">
                                        <input type="range" asp-for="RValue" class="form-range" min="0" max="255" id="rSlider" oninput="updateColorPreview()">
                                        <input type="number" asp-for="RValue" class="form-control" min="0" max="255" style="width: 70px" id="rValue" oninput="updateSlider('rValue', 'rSlider')">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="GValue" class="form-label">G (Yeşil)</label>
                                    <div class="d-flex gap-2 align-items-center">
                                        <input type="range" asp-for="GValue" class="form-range" min="0" max="255" id="gSlider" oninput="updateColorPreview()">
                                        <input type="number" asp-for="GValue" class="form-control" min="0" max="255" style="width: 70px" id="gValue" oninput="updateSlider('gValue', 'gSlider')">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="BValue" class="form-label">B (Mavi)</label>
                                    <div class="d-flex gap-2 align-items-center">
                                        <input type="range" asp-for="BValue" class="form-range" min="0" max="255" id="bSlider" oninput="updateColorPreview()">
                                        <input type="number" asp-for="BValue" class="form-control" min="0" max="255" style="width: 70px" id="bValue" oninput="updateSlider('bValue', 'bSlider')">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">Renk Önizleme</h5>
                    <div id="colorPreview" class="rounded border" style="height: 200px; width: 100%;"></div>
                    <div class="mt-3 text-center">
                        <code id="rgbCode" class="p-2 bg-light rounded">RGB(0, 0, 0)</code>
                        <code id="hexCode" class="p-2 bg-light rounded ms-2">#000000</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

